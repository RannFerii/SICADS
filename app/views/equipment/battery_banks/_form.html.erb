<%= simple_form_for(['equipment',@battery_bank]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nomenclatura %>
    <%= f.input :marca %>
    <%= f.label :banco_baterias_type %>
    <%= f.select :banco_baterias_type, BatteryBank.banco_baterias_types.keys.to_a, { prompt: '- Seleccionar -' } %>
    <%= f.input :num_celdas %>
    <%= f.input :capacidad_ah %>
    <%= f.input :volts_totales %>
    <%= f.input :fecha_puesta_servicio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
