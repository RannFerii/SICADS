    <li> <%= t.fase %> </li>
    <li> <%= t.marca %> </li>
    <li> <%= t.num_serie %> </li>
    <li> <%= t.fecha_fabricacion %> </li>
    <li> <%= t.relacion_transformacion %> </li>
    <li> <%= t.capacidad_transformacion %> </li>
    <li> <%= t.masa_embarque %> </li>
    <li> <%= t.esquema_nucleo %> </li>
    <li> <%= t.total_aceite %> </li>
    <li> <%= t.sistema_enfriamiento %> </li>
    <li> <%= t.mampara %> </li>
    <li> <%= t.num_taps %> </li>
    <li> <%= t.sistema_contra_incendios %> </li>
    <li> <%= t.fosa_captadora_aceite %> </li>
    <li> <%= t.tension_sistema %> </li>
    <li> <%= t.capacitancia_total %> </li>
    <li> <%= t.clase_exactitud %> </li>
    <li> <%= t.tipo_expancion_aceite %> </li>
    <li> <%= t.tipo_envolvente %> </li>
    <li> <%= t.mva %> </li>
    <li> <%= t.fecha_puesta_servicio %> </li>
  <% end %>
   <p>
  <strong>Devanados </strong>
    <%  @transformer.windings.each do |t| %>
        <li> <%= t.devanado_type %> </li>
        <li> <%= t.devanado_kv %> </li>
        <li> <%= t.porcentaje_z %> </li>
        <li> <%= t.z_mva %> </li>
        <li> <%= t.z_kv %> </li>
        <li> <%= t.conexion_type %> </li>
    <% end %>
</p>
   <p>
  <strong>Cambiador de Taps </strong>
    <%  @transformer.tap_changers.each do |t| %>
        <li> <%= t.marca %> </li>
        <li> <%= t.tipo %> </li>
        <li> <%= t.serie %> </li>
        <li> <%= t.num_pasos %> </li>
    <% end %>
</p>
 <p>
  <strong>Boquillas </strong>
    <%  @transformer.trans_mouthpieces.each do |t| %>
        <li> <%= t.marca %> </li>
        <li> <%= t.tipo %> </li>
        <li> <%= t.num_serie %> </li>
        <li> <%= t.kv %> </li>
        <li> <%= t.amp %> </li>
        <li> <%= t.fecha_fabricacion %> </li>
    <% end %>
</p>


