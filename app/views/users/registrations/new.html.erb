<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :rpe, required: true, autofocus: true  %>
    <%= f.input :nombre, required: true, autofocus: true %>
    <%= f.input :apellido_paterno, required: true, autofocus: true %>
    <%= f.input :apellido_materno, required: true, autofocus: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.label :tipo_de_usuario %><br />
    <%= f.select :role, User.roles.keys.to_a, { prompt: '- Seleccionar -' } %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
